 System(systemB, "System B")
 Person(personI, "Internal")
}

System_Ext(systemE, "System (External)")
Person(personA, "Any")


Rel(personA, systemA, "Request", "encrypted (TLS)")
Rel(systemA, personA, "Response", "encrypted (TLS)")
